<LoginSuccess>:
    GridLayout:
        cols: 1
        Button: 
            text: "logout"
            on_press: root.log_out()
        Label: 
            text: "how do you feel"
        TextInput: 
            id: feeling
            hint_text: "sad, unloved, happy"
        Button:
            text: "enlighten me"
            on_press: root.get_quote(root.ids.feeling.text)
        Label:
            id: quotes
            text: ""

        
<RootWidget>:
    LoginScreen:
        name: "Login_Screen"
    SoccerScreen:
        name: "Soccer_screen"
    BaseballScreen:
        name: "Baseball_screen"
    TennisScreen:
        name: "Tennis_screen"
    FootballScreen:
        name: "Football_screen"
    HockeyScreen:
        name: "Hockey_screen"
